{

    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": ["helm-values","github-actions"],
    "helm-values": {
        "fileMatch": [
            "(^|/)values(\\..*)?\\.ya?ml(\\.gotmpl)?$"
        ]
    },
    "hostRules": [
      {
        "matchHost": "europe-west1-docker.pkg.dev",
        "username": "_json_key_base64",
        "password": "{{ secrets.GCP_SERVICE_ACCOUNT_KEY }}"
      }
    ]
}
